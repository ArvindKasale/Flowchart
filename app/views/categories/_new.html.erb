<% form_remote_for @category do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
	<p><%= f.label :parent_id, "Parent Category" %><%= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, :prompt => "NONE: Make This A Root Category" %> <br />
	</p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows=> 2 %>
  </p>


  <p><%= f.submit "Submit" %></p>
<% end %>


