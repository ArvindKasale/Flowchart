<% content_tag :li, :id => dom_id(root) do %>
    <%= content_tag :div, "#{root.name} &nbsp;<small>"+ link_to_remote ("E",:method=> :get,:update=>'categories', :url=>{:action=> "create_edit_box", :id=> root.id})+" "+ link_to_remote("D",:method=> :delete, :url=>{:action=>:destroy, :id=> root.id}, :confirm=>"Are you sure you want to delete #{root.name}?")+"</small>"%>
    <% content_tag :ul do %>
        <% for child in root.children do %>
            <%= render :partial => "partials/tree", :locals => {:root => child }%>
        <% end %>
    <% end unless root.leaf? %>
<% end %>