<h1>Editing master_map</h1>

<% form_for(@master_map) do |f| %>
  <%= f.error_messages %>
<p>
	<%= f.label :name %>
	<br />
	<%= f.text_field :name %>
</p>

<p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows=> 4 %>
</p>
  
<p>
    <%= f.label :created_by %><br />
    <%= f.text_field :created_by %>
</p>
<p>
    <%= f.submit 'Update' %>
</p>
<% end %>

<%= link_to 'Show', @master_map %> |
<%= link_to 'Back', master_maps_path %>